#include<stdio.h>
int main (){
int n;
printf("enter number :");
scanf("%d",&n);
int nsp=1;
int nst1=(n/2)+1;
int ml=((n/2)+1);
for(int i=1;i<=n;i++){
for(int j=1;j<=nst1;j++){
    printf("*");
}
for(int k=1;k<=nsp;k++){
    printf(" ");
}
for(int l=1;l<=nst1;l++){
    printf("*");
}
if(i<ml){
    nst1--; 
    nsp=nsp+2;
}
else{
    nst1++;
    nsp=nsp-2;
}
printf("\n");
}
    return 0;
}
